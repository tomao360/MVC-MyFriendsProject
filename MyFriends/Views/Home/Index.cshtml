@model IEnumerable<MyFriends.Models.Friend>

@{
    ViewData["Title"] = "Index";
}

<h1>My Friends</h1>

<p>
    <a asp-action="Create">Add New Friend</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Profile Picture</th>
            <th>
                @Html.DisplayNameFor(model => model.FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @if (item.Images.Count > 0)
                        if (item.Images.First() != null)
                        {
                            <img src="data:image;base64,@System.Convert.ToBase64String(item.Images.First().MyImage)" width="80" height="60" />
                        }
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.ID">
                @Html.DisplayFor(modelItem => item.FullName)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Address)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.ID}) |
                @Html.ActionLink(item.FirstName + "'s" + " " + "Details", "Details", new { id = item.ID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID })
            </td>
        </tr>
}
    </tbody>
</table>
